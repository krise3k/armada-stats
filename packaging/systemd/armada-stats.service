[Unit]
Description=armada-stats
After=armada.service
Requires=armada.service

[Service]
User=armada-stats
Group=armada-stats
Type=simple
Restart=on-failure
ExecStart=/usr/local/bin/armada-stats --config /etc/armada-stats/armada-stats.yml
TimeoutStopSec=5
RestartSec=1

[Install]
WantedBy=multi-user.target